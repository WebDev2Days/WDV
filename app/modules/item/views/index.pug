extends ../../../templates/navbar-footer.pug

block main
  #content.container
    .row
      each prod in products
        .col
          nav(aria-label='breadcrumb')
            ol.breadcrumb.breadcrumb-item
              li.breadcrumb-item
                a(href='/store') #{prod.strCatName}
              |           
              li.breadcrumb-item.active(aria-current='page')
                | #{prod.strProdName}
          |       
          #inner-content
            .mb-4.pl-1
              h4.lead.mb-0
                b #{prod.strProdName}
              hr
            |         
            .row.mx-1
              .col-sm-6.mb-3
                img(src='/assets/images/static/'+prod.strProdImg, alt='USG', height='350px', width='100%')
              |           
              .col-sm-6.mb-3
                .row.item-desc(style='height: 200px; overflow-y: auto;')
                  .col
                    h7 #{prod.txtProdDesc}
                      
                |             
                .row.pt-3(style='height: 150px;')
                  .col
                    h4.mb-1 &#x20B1; #{prod.fltProdPrice}
                    br
                    |                 
                    small.text-muted Only #{prod.intProdStock} items left
                    |                 
                    br
                    |                 
