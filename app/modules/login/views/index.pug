extends ../../../templates/master.pug

block content
  .jumbotron.jumbotron-login.jumbotron-fluid
    .container.text-center
      img(src='/assets/images/static/usg-green.png' onContextMenu='return false')
      h1 Ultra Super Green
  .container.container-login
    .row
      .col-sm
      .col-sm-8.col-md-7.col-lg-5.col-login
        h2.text-center Sign-in
        .col-sm-12
          hr
          form(method='POST' action='/login')
            .form-group
              label(for='userName')
                b Username
              input#userName.form-control(type='text' name='username' aria-describedby='userNameHelp' required)
              small#userNameHelp.form-text.text-muted We'll never share your username with anyone else.
            .form-group
              label(for='password')
                b Password
              input#password.form-control(type='password' name='password' aria-describedby='passwordHelp' required)
              small#passwordHelp.form-text.text-muted Do not share your password to anyone.
            button.btn.btn-primary.btn-md.btn-block(type='submit') Submit
            hr
            p
              small
                b Dont have an account? 
                  a(href='/register') Register Here
      .col-sm
    br
    br
