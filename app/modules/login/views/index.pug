extends ../../../templates/master.pug

block content
  .container.container-login(style='max-width:1540px')
      .row.mh-100vh
          #bg-block.col-lg-6.d-flex.align-items-end(style='background-image:url("/assets/images/static/img2.png");background-size:cover;background-position:center center;')
            p.ml-auto.small.text-dark.mb-2
                br
          #login-block.col-10.col-sm-8.col-md-6.col-lg-6.offset-1.offset-sm-2.offset-md-3.offset-lg-0.align-self-center.d-lg-flex.align-items-lg-center.align-self-lg-stretch.bg-white.p-5.rounded.rounded-lg-0.my-5.my-lg-0(style="float:right;")
            .m-auto.w-lg-75.w-xl-55
                h2.mb-3.text-center(style='color:#199973;')
                  img(src='assets/images/static/usg-green.png' style='height: 20%; width: 20%;')
                  | Ultra Super Green
                form(method='POST' action='/login')
                  .form-group
                    label(for='userName')
                      b Username
                    input#userName.form-control(type='text' name='username' aria-describedby='userNameHelp' required)
                    small#userNameHelp.form-text.text-muted We'll never share your username with anyone else.
                  .form-group
                    label(for='password')
                      b Password
                    input#password.form-control(type='password' name='password' aria-describedby='passwordHelp' required)
                    small#passwordHelp.form-text.text-muted Do not share your password to anyone.
                  button.btn.btn-primary.btn-md.btn-block(type='submit') Submit
                  hr
                  p
                    small
                      b Dont have an account? 
                        a(href='/register') Register Here

